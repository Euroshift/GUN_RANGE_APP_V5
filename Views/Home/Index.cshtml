        $('#addShooterLastRangeDate').val('');

        // Show the "Add Shooter" modal
        $('#addShooterModal').show();

    });


    // Event handler for the "Save New Shooter" button click


    $('#saveNewShooterButton').on('click', function () {
        console.log('Save New Shooter Button clicked');

        var requiredFields = [
        $('#addShooterName'),
        $('#addShooterCID'),
        $('#addShooterTeam'),
        $('#addShooterDivision'),
        $('#addShooterGunInformation'),
        $('#addShooterQualificationsTraining'),
        $('#addShooterAdditionalTrainingType'),
        $('#addShooterAdditionalTrainingHours'),
        $('#addShooterIsRetired'),
        $('#addShooterIsActive'),
        $('#addShooterOfficerId'),
        $('#addShooterIssuedEquipment'),
        $('#addShooterLastRangeDate'),
        ]
        var allFieldsFilled = true;

        requiredFields.forEach(function (field) {
            if (!field.val()) {
                allFieldsFilled = false;
                return false; // Exit loop early if any field is empty
            }
        });

        if (!allFieldsFilled) {
            // Show an alert or a message to notify the user
