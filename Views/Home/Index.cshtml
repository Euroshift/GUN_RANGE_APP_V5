        var additionaltrainingtype = $('#addShooterAdditionalTrainingType').val();
        var additionaltraininghours = $('#addShooterAdditionalTrainingHours').val();
        var retired = $('#retiredYes').is(':checked'); // Check if the retired checkbox is checked
        var inactive = $('#inactiveYes').is(':checked');
