            name: name,
            cid: cid,
            team: team,
            division: division,
            guninformation: guninformation,
            qualificationstraining: qualificationstraining,
            additionaltrainingtype: additionaltrainingtype,
            additionaltraininghours: additionaltraininghours,
            retired: retired,
            inactive: inactive,
            officerid: officerid,
